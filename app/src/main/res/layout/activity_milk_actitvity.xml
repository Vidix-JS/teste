<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MilkActitvity">

    <Button
        android:id="@+id/btn_chs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="Сыр"
        tools:ignore="MissingConstraints"
        />



    <Button
        android:id="@+id/btn_milk_drink"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Молочные напитки"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toBottomOf="@+id/btn_chs"
        tools:ignore="MissingConstraints"
        />



    <Button
        android:id="@+id/milk_sweets"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="Сладости из молока"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/btn_milk_drink"/>



    <Button
        android:id="@+id/butter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="Сливочное масло"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/milk_sweets"/>



    <Button
        android:id="@+id/spread"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="Спред"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/butter"/>



    <ImageButton
        android:id="@+id/btn_Img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="4dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_panier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />



    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/ic_left_arrow"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>